<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context=".view.fragments.DetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/details_text_margin_top"
        android:layout_marginBottom="40dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/details_cardview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/details_text_margin_top"
            app:cardCornerRadius="@dimen/details_corner_dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/details_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/details_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/details_text_margin_top"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_cardview"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/details_repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/red"
            android:textSize="@dimen/item_text_size_sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_login"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/last_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/details_text_margin_top"
            android:layout_marginTop="30dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/last_commit"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_repo_name" />

        <TextView
            android:id="@+id/details_commit_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/details_text_margin_top"
            android:layout_marginTop="@dimen/details_text_margin_top"
            android:background="@drawable/background_text_view"
            android:padding="@dimen/margin_recycler"
            android:textAppearance="?android:attr/textAppearanceMedium"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/last_commit"
            tools:text="Commit message" />

        <TextView
            android:id="@+id/details_commiter_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_text_margin_top"
            android:ellipsize="end"
            android:maxWidth="200dp"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            app:layout_constraintRight_toLeftOf="@id/details_commit_date"
            app:layout_constraintTop_toBottomOf="@id/details_commit_message"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/details_commit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_commit_message"
            tools:maxLines="1"
            tools:text="01.01.1990" />

        <TextView
            android:id="@+id/parents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/details_text_margin_top"
            android:layout_marginTop="@dimen/details_text_margin_top"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/parents"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/details_commiter_name" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/parents_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/details_text_margin_top"
            android:layout_marginTop="@dimen/details_corner_dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/parents"
            tools:listitem="@layout/parent_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>